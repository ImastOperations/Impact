<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardMain"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="1dp"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/relativeDelete"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_circle_minus" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/relativeDelete"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/linearRate"
            android:text=""
            android:layout_marginRight="10dp"
            android:textColor="#000"
            android:textSize="14sp" />


        <LinearLayout
            android:id="@+id/linearRate"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="#000"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvRateDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#d9d2d2"
                android:textSize="12sp" />



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#e7e7e7" />


    </RelativeLayout>


</LinearLayout>